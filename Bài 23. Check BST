#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    int n;
    cin >> n;
    int maxx = -100;
    while(n--){
        int x ;
        cin >> x;
        if(x < maxx){
            cout<<"NO";
            return 0;
        }
    }
    cout<<"YES";
}
